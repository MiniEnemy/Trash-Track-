@model int
@{
    ViewData["Title"] = "Error";
    var code = Model;
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger">Error @code</h1>

    @if (code == 404)
    {
        <p class="lead">The page you’re looking for doesn’t exist.</p>
    }
    else if (code == 403)
    {
        <p class="lead">You don’t have permission to access this page.</p>
    }
    else if (code == 500)
    {
        <p class="lead">Internal server error occurred. Please try again later.</p>
    }
    else
    {
        <p class="lead">An unexpected error occurred.</p>
    }

    <a href="/" class="btn btn-outline-primary mt-3">Back to Home</a>
</div>
