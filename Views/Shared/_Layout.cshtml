<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TrashTrack | Smart Waste Management for Kathmandu</title>

    <!-- Bootstrap 5 CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/hf.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-3 shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <i class="bi bi-recycle me-2 fs-3"></i>
                    <span class="brand fs-3 fw-bold">TrashTrack</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto me-4">
                        <li class="nav-item mx-2">
                            <a class="nav-link active" href="#">Home</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" href="#features">Features</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" href="#schedule">Schedule</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" href="#report">Report</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" href="#about">About</a>
                        </li>
                        <li class="nav-item d-lg-none mt-3">
                            <button class="btn btn-secondary w-100" data-bs-toggle="modal" data-bs-target="#authModal">
                                <i class="bi bi-person-circle me-2"></i> Login
                            </button>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <button id="authBtn" class="btn btn-secondary d-none d-lg-inline-flex align-items-center" data-bs-toggle="modal" data-bs-target="#authModal">
                            <i class="bi bi-person-circle me-2"></i>Login
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="mt-5 pt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-6 pb-4">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-recycle text-secondary fs-1 me-2"></i>
                        <span class="brand fs-3 fw-bold">TrashTrack</span>
                    </div>
                    <p class="text-white-50">Empowering Kathmandu residents to manage waste effectively and build a cleaner city together.</p>
                    <div class="d-flex gap-3 mt-4">
                        <a href="#" class="text-white fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Home</a></li>
                        <li class="mb-2"><a href="#features" class="text-white-50 text-decoration-none">Features</a></li>
                        <li class="mb-2"><a href="#schedule" class="text-white-50 text-decoration-none">Schedules</a></li>
                        <li class="mb-2"><a href="#report" class="text-white-50 text-decoration-none">Report</a></li>
                        <li class="mb-2"><a href="#about" class="text-white-50 text-decoration-none">About</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">Resources</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Waste Sorting Guide</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Recycling Centers</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Municipal Contacts</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Eco-Friendly Tips</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-4">
                    <h5 class="fw-bold mb-3">Contact Us</h5>
                    <ul class="list-unstyled text-white-50">
                        <li class="mb-3 d-flex">
                            <i class="bi bi-envelope me-3 text-secondary"></i>
                            <span>contact@trashtrack.org</span>
                        </li>
                        <li class="mb-3 d-flex">
                            <i class="bi bi-telephone me-3 text-secondary"></i>
                            <span>+977 1-1234567</span>
                        </li>
                        <li class="d-flex">
                            <i class="bi bi-geo-alt me-3 text-secondary"></i>
                            <span>Kathmandu Metropolitan City</span>
                        </li>
                    </ul>
                    <form class="mt-4">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your email" aria-label="Email">
                            <button class="btn btn-secondary" type="button">Subscribe</button>
                        </div>
                        <small class="text-white-50">Subscribe to our newsletter</small>
                    </form>
                </div>
            </div>
            <hr class="my-4 bg-secondary">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <p class="mb-0 text-white-50">&copy; 2025 TrashTrack. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0 text-white-50">Made with <i class="bi bi-heart-fill text-danger"></i> for a cleaner Kathmandu</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>