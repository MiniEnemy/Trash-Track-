@section Scripts {
    <script>
               $(document).ready(function () {
            $('#wardSelect').on('change', function () {
                const wardId = $(this).val();
                if (!wardId) return;

                // Show loading state
                $('#scheduleDisplay').html(`
                    <div class="col-12 text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading schedule...</p>
                    </div>
                `);

                $.ajax({
                    url: '/Home/GetWardSchedule',
                    type: 'GET',
                    data: { wardId },
                    success: function (data) {
                        if (data.error) {
                            $('#scheduleDisplay').html(`
                                <div class="col-12">
                                    <div class="alert alert-danger">
                                        <h5>Error</h5>
                                        <p>${data.error}</p>
                                    </div>
                                </div>
                            `);
                            return;
                        }

                        let html = '';
                        if (data.isOverrideToday) {
                            html = `
                                <div class="col-12">
                                    <div class="alert ${data.isCancelled ? 'alert-danger' : 'alert-info'}">
                                        <h5><strong>${data.isCancelled ? 'Collection Cancelled' : 'Override Schedule'}</strong></h5>
                                        <p><strong>Day:</strong> ${data.overrideDay || 'Not specified'}</p>
                                        <p><strong>Time:</strong> ${data.overrideTime || 'Not specified'}</p>
                                        ${data.overrideMessage ? `<p><strong>Note:</strong> ${data.overrideMessage}</p>` : ''}
                                    </div>
                                </div>`;
                        } else {
                            html = `
                                <div class="col-12">
                                    <div class="alert alert-success">
                                        <h5><strong>Regular Schedule</strong></h5>
                                        <p><strong>Day:</strong> ${data.regularDay || 'Not scheduled'}</p>
                                        <p><strong>Time:</strong> ${data.regularTime || 'Not scheduled'}</p>
                                    </div>
                                </div>`;
                        }
                        $('#scheduleDisplay').html(html);
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX Error:', error);
                        $('#scheduleDisplay').html(`
                            <div class="col-12">
                                <div class="alert alert-danger">
                                    <h5>Unable to load schedule</h5>
                                    <p>Please try again later. If the problem persists, contact support.</p>
                                </div>
                            </div>
                        `);
                    }
                });
            });
        });
    </script>
}



