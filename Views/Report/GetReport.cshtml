@model Trash_Track.Models.Report

@{
    ViewData["Title"] = "Report Details";
}

<h1>Report Details</h1>

<div>
    <h3>@Model.ReporterName</h3>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Ward ID:</strong> @Model.WardId</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Created At:</strong> @Model.CreatedAt</p>

    @if (!string.IsNullOrEmpty(Model.PhotoPath))
    {
        <div>
            <h4>Photo:</h4>
            <img src="@Model.PhotoPath" alt="Report Photo" class="img-thumbnail" />
        </div>
    }
</div>

<a href="@Url.Action("CreateReport", "Report")" class="btn btn-secondary">Back to Create Report</a>