@model IEnumerable<Trash_Track.Models.Report>
@{
    ViewData["Title"] = "Report List";
}

<style>
    .btn-success {
        background-color: #2e7d32;
        border-color: #2e7d32;
    }

        .btn-success:hover {
            background-color: #1b5e20;
            border-color: #1b5e20;
        }

    .btn-warning {
        background-color: #ff8f00;
        border-color: #ff8f00;
    }

        .btn-warning:hover {
            background-color: #e67e00;
            border-color: #e67e00;
        }
</style>

<div class="container py-4">
    <div class="row">
        <div class="col-12">

            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-success fw-bold mb-1">
                        <i class="fas fa-file-alt me-2"></i>@ViewData["Title"]
                    </h2>
                    <p class="text-muted mb-0">View and manage your submitted reports</p>
                </div>
                <div>
                    <a asp-controller="Report" asp-action="Create" class="btn btn-warning btn-lg">
                        <i class="fas fa-plus me-2"></i>Create Report
                    </a>
                </div>
            </div>

            <!-- No Reports Alert -->
            @if (!Model.Any())
            {
                <div class="alert alert-info d-flex align-items-center">
                    <i class="fas fa-info-circle me-3 fa-lg"></i>
                    <div>
                        <strong>No reports found!</strong> You have not submitted any reports yet.
                        <a asp-controller="Report" asp-action="Create" class="alert-link ms-2">Create your first report</a>
                    </div>
                </div>
            }
            else
            {
                <!-- Reports Table -->
                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 text-success">
                            <i class="fas fa-list me-2"></i>Your Reports
                            <span class="badge bg-success ms-2">@Model.Count() Total</span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-success">
                                    <tr>
                                        <th><i class="fas fa-user me-1"></i>Reporter</th>
                                        <th><i class="fas fa-map-marker-alt me-1"></i>Ward</th>
                                        <th><i class="fas fa-file-text me-1"></i>Description</th>
                                        <th class="text-center"><i class="fas fa-flag me-1"></i>Status</th>
                                        <th><i class="fas fa-calendar me-1"></i>Created</th>
                                        <th class="text-center"><i class="fas fa-camera me-1"></i>Photo</th>
                                        <th class="text-center"><i class="fas fa-cog me-1"></i>Actions</th>
                                        <th><i class="fas fa-comment me-1"></i>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var r in Model)
                                    {
                                        <tr class="align-middle">
                                            <td>@r.ReporterName</td>
                                            <td>
                                                <span class="badge bg-info text-dark">@r.Ward?.Name</span>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 200px;" title="@r.Description">
                                                    @r.Description
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge fs-6 @(r.Status == "Resolved" ? "bg-success" : r.Status == "In Progress" ? "bg-warning text-dark" : "bg-secondary")">
                                                    @r.Status
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">@r.CreatedAt.ToString("MMM dd, yyyy")</small>
                                                <div class="small text-muted">@r.CreatedAt.ToString("hh:mm tt")</div>
                                            </td>
                                            <td class="text-center">
                                                @if (!string.IsNullOrEmpty(r.PhotoPath))
                                                {
                                                    <img src="@r.PhotoPath"
                                                         class="img-thumbnail rounded"
                                                         style="width: 60px; height: 60px; object-fit: cover;"
                                                         alt="Report Photo" />
                                                }
                                                else
                                                {
                                                    <div class="text-muted">
                                                        <i class="fas fa-image fa-2x opacity-50"></i>
                                                        <small class="d-block">No photo</small>
                                                    </div>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (r.Status == "Pending")
                                                {
                                                    <div class="btn-group-vertical btn-group-sm" role="group">
                                                        <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-warning btn-sm">
                                                            <i class="fas fa-edit me-1"></i>Edit
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-danger btn-sm">
                                                            <i class="fas fa-trash me-1"></i>Delete
                                                        </a>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-muted">
                                                        <i class="fas fa-lock me-1"></i>Locked
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrWhiteSpace(r.Remarks))
                                                {
                                                    <div class="text-truncate" style="max-width: 150px;" title="@r.Remarks">
                                                        @r.Remarks
                                                    </div>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">
                                                        <i class="fas fa-phone me-1"></i>
                                                        Contact: 98563467325
                                                    </small>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-center">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Reports with "Pending" status can be edited or deleted
                        </small>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
