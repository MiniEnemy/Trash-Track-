@model List<Trash_Track.Models.Report>
@{
    ViewData["Title"] = "All Reports";
    var statusList = ViewBag.StatusList as List<string>;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-clipboard-list me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="fw-semibold">
                                        <i class="fas fa-user me-1"></i>Reporter
                                    </th>
                                    <th scope="col" class="fw-semibold">
                                        <i class="fas fa-file-alt me-1"></i>Description
                                    </th>
                                    <th scope="col" class="fw-semibold">
                                        <i class="fas fa-map-marker-alt me-1"></i>Ward
                                    </th>
                                    <th scope="col" class="fw-semibold">
                                        <i class="fas fa-calendar me-1"></i>Created
                                    </th>
                                    <th scope="col" class="fw-semibold text-center">
                                        <i class="fas fa-camera me-1"></i>Photo
                                    </th>
                                    <th scope="col" class="fw-semibold text-center">
                                        <i class="fas fa-info-circle me-1"></i>Status
                                    </th>
                                    <th scope="col" class="fw-semibold text-center" style="min-width: 350px;">
                                        <i class="fas fa-edit me-1"></i>Update Details
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="align-middle">
                                        <td class="fw-medium">@item.ReporterName</td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 200px;" title="@item.Description">
                                                @item.Description
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info text-dark">
                                                Ward @item.Ward?.No
                                            </span>
                                            <small class="d-block text-muted mt-1">@item.Ward?.Name</small>
                                        </td>
                                        <td>
                                            <small class="text-muted">@item.CreatedAt.ToShortDateString()</small>
                                        </td>
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(item.PhotoPath))
                                            {
                                                <img src="@item.PhotoPath" alt="Report Photo"
                                                     class="img-thumbnail rounded"
                                                     style="width: 60px; height: 60px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="text-muted">
                                                    <i class="fas fa-image fa-2x opacity-50"></i>
                                                    <small class="d-block">No photo</small>
                                                </div>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge fs-6 @(item.Status == "Resolved" ? "bg-success" : item.Status == "In Progress" ? "bg-warning text-dark" : "bg-secondary")">
                                                @item.Status
                                            </span>
                                        </td>
                                        <td>
                                            <div class="bg-light p-3 rounded border">
                                                <form asp-action="UpdateReport" method="post">
                                                    <input type="hidden" name="reportId" value="@item.Id" />

                                                    <div class="row g-2 mb-3">
                                                        <div class="col-md-6">
                                                            <label class="form-label small fw-semibold text-primary">
                                                                <i class="fas fa-flag me-1"></i>Status
                                                            </label>
                                                            <select name="status" class="form-select form-select-sm">
                                                                @foreach (var status in statusList)
                                                                {
                                                                    <option value="@status" selected="@(status == item.Status)">@status</option>
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="form-label small fw-semibold text-primary">
                                                                <i class="fas fa-truck me-1"></i>Assigned Driver
                                                            </label>
                                                            <select name="assignedDriverId" class="form-select form-select-sm">
                                                                @foreach (var driver in ViewBag.Drivers as List<SelectListItem>)
                                                                {
                                                                    <option value="@driver.Value" selected="@(item.AssignedDriverId?.ToString() == driver.Value)">
                                                                        @driver.Text
                                                                    </option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="mb-3">
                                                        <label class="form-label small fw-semibold text-primary">
                                                            <i class="fas fa-comment me-1"></i>Remarks
                                                        </label>
                                                        <textarea name="remarks"
                                                              class="form-control form-control-sm"
                                                              rows="3"
                                                              placeholder="Add update remarks...">@item.Remarks</textarea>
                                                    </div>

                                                    <div class="d-grid">
                                                        <button type="submit" class="btn btn-primary btn-sm">
                                                            <i class="fas fa-save me-1"></i>Update Report
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light text-muted text-center">
                    <small>Total Reports: @Model.Count()</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>    