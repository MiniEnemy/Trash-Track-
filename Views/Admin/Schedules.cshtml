@model List<Trash_Track.Models.PickupSchedule>
@{
    ViewData["Title"] = "Manage Pickup Schedules";
}

<style>
    .btn-success {
        background-color: #2e7d32;
        border-color: #2e7d32;
    }

        .btn-success:hover {
            background-color: #1b5e20;
            border-color: #1b5e20;
        }

    .btn-warning {
        background-color: #ff8f00;
        border-color: #ff8f00;
    }
</style>

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="mb-4">
                <h2 class="text-success fw-bold">
                    <i class="fas fa-calendar-alt me-2"></i>@ViewData["Title"]
                </h2>
                <p class="text-muted">Manage waste collection schedules for all wards</p>
            </div>

            <!-- Main Table Card -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-success">
                        <i class="fas fa-list me-2"></i>Pickup Schedules
                        <span class="badge bg-success ms-2">@Model.Count</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-success">
                                <tr>
                                    <th class="fw-semibold">
                                        <i class="fas fa-map-marker-alt me-1"></i>Ward
                                    </th>
                                    <th class="fw-semibold">
                                        <i class="fas fa-calendar-day me-1"></i>Pickup Day
                                    </th>
                                    <th class="fw-semibold">
                                        <i class="fas fa-clock me-1"></i>Time
                                    </th>
                                    <th class="fw-semibold">
                                        <i class="fas fa-user me-1"></i>Driver
                                    </th>
                                    <th class="fw-semibold text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <form asp-action="UpdateSchedule" method="post" class="d-contents">
                                            <input type="hidden" name="scheduleId" value="@item.Id" />

                                        <td class="align-middle">
                                            <span class="badge bg-success fs-6 px-3 py-2">
                                                Ward @item.Ward.No
                                            </span>
                                            <div class="small text-muted mt-1">@item.Ward.Name</div>
                                        </td>

                                        <td class="align-middle">
                                            <select name="day" class="form-select">
                                                @foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)))
                                                {
                                                    <option value="@day" selected="@(item.PickupDay == day)">
                                                        @day.ToString()
                                                    </option>
                                                }
                                            </select>
                                        </td>

                                        <td class="align-middle">
                                            <input name="time"
                                                   type="time"
                                                   class="form-control"
                                                   value="@item.PickupTime.ToString(@"hh\:mm")" />
                                        </td>

                                        <td class="align-middle">
                                            <select name="driverId" class="form-select">
                                                @foreach (var driver in ViewBag.Drivers as SelectList)
                                                {
                                                    <option value="@driver.Value" selected="@(driver.Value == item.DriverId?.ToString())">
                                                        @driver.Text
                                                    </option>
                                                }
                                            </select>
                                        </td>

                                        <td class="align-middle text-center">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-save me-1"></i>Update
                                            </button>
                                        </td>
                                        </form>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>
</div>