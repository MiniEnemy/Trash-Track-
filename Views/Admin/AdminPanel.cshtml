@* @{
    ViewBag.Title = "TrashTrack Admin";
    Layout = null; // Set to "_Layout" if you have a shared layout
} *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Yrsa:ital,wght@0,300..700;1,300..700&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
          rel="stylesheet"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background: #f5f5f5;
            font-family: "Yrsa", serif;
            min-height: 100vh;
        }

        .dash-menu {
            padding: 1rem 1.5rem;
            margin-bottom: 0.5rem;
            border-radius: 16px;
            transition: background 0.2s, color 0.2s, box-shadow 0.2s;
            font-size: 1.15rem;
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

            .dash-menu.active,
            .dash-menu:hover {
                background: #fff;
                color: #2e7d32 !important;
                box-shadow: 0 2px 12px 0 rgba(44, 62, 80, 0.08);
            }

            .dash-menu i {
                font-size: 1.3rem;
            }

        .admin-prof .fa-bell {
            position: relative;
        }

        .noti {
            position: absolute;
            top: -6px;
            right: -6px;
            width: 12px;
            height: 12px;
            background: #ffeb3b;
            border: 2px solid #fff;
            border-radius: 50%;
            display: inline-block;
        }

        .content {
            background: transparent;
            min-height: 100vh;
        }

        .topbar {
            background: #2e7d32;
            border-radius: 0 0 24px 24px;
            box-shadow: 0 2px 12px 0 rgba(44, 62, 80, 0.05);
        }

        .admin-prof .fa-user {
            margin-left: 1.5rem;
        }

        .dashboard-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: #2e7d32;
            margin-bottom: 2rem;
        }

        .card-metric {
            border: none;
            border-radius: 20px;
            box-shadow: 0 4px 24px 0 rgba(44, 62, 80, 0.1);
            padding: 2.5rem 1.5rem;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 1.5rem;
            transition: transform 0.15s;
            cursor: pointer;
        }

            .card-metric:hover {
                transform: translateY(-6px) scale(1.03);
                box-shadow: 0 8px 32px 0 rgba(44, 62, 80, 0.13);
            }

            .card-metric.bg-primary {
                background: linear-gradient(135deg, #4fc3f7 60%, #1976d2 100%);
            }

            .card-metric.bg-success {
                background: linear-gradient(135deg, #81c784 60%, #2e7d32 100%);
            }

            .card-metric.bg-danger {
                background: linear-gradient(135deg, #ff5252 60%, #b71c1c 100%);
            }

            .card-metric i {
                font-size: 2.5rem;
                opacity: 0.85;
            }

            .card-metric .metric-label {
                font-size: 1.2rem;
                font-weight: 600;
                margin-bottom: 0.25rem;
            }

            .card-metric .metric-value {
                font-size: 2rem;
                font-weight: 700;
            }

        /* pickup schedule  */

        .pickup-container {
            max-width: 600px;
            margin: 2rem auto;
            background: #fff;
            border-radius: 1.5rem;
            box-shadow: 0 4px 24px 0 rgba(44, 62, 80, 0.1);
            padding: 2rem 1.5rem 2.5rem 1.5rem;
        }

        .pickup-header {
            font-family: "Yrsa", serif;
            font-weight: 700;
            font-size: 2rem;
            color: #2e7d32;
            margin-bottom: 1.5rem;
            letter-spacing: 1px;
        }

        .next-pickup-box {
            background: linear-gradient(90deg, #81c784 60%, #2e7d32 100%);
            color: #fff;
            border-radius: 1rem;
            box-shadow: 0 2px 8px 0 rgba(44, 62, 80, 0.08);
            padding: 1.25rem 1rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
        }

            .next-pickup-box i {
                font-size: 2rem;
                opacity: 0.9;
            }

        .pickup-table th,
        .pickup-table td {
            vertical-align: middle;
            text-align: center;
            font-size: 1.05rem;
        }

        .pickup-table th {
            background: #f0f4f8;
            font-weight: 600;
            color: #2e7d32;
            border-top: none;
        }

        .pickup-table tr {
            transition: background 0.15s;
        }

            .pickup-table tr:hover {
                background: #f7fafc;
            }

        .status-badge {
            font-size: 0.95rem;
            font-weight: 500;
            border-radius: 1rem;
            padding: 0.35em 1em;
            letter-spacing: 0.5px;
            box-shadow: 0 1px 4px 0 rgba(44, 62, 80, 0.07);
        }

        .status-scheduled {
            background: #e8f5e9;
            color: #2e7d32;
        }

        .status-completed {
            background: #e3f2fd;
            color: #1976d2;
        }

        .status-missed {
            background: #ffebee;
            color: #c62828;
        }

        /* user profile  */

        .bg-green {
            background-color: #2e7d32;
        }

        .dash-menu {
            padding: 1rem;
        }

        .dash-hover:hover {
            background-color: white;
            color: #2e7d32;
            cursor: pointer;
            font-weight: 500;
        }

        .noti {
            right: 0px;
            top: 0px;
            width: 5px;
            height: 5px;
        }

        .bg-nav {
            background-color: #368d3b;
        }

        .content {
            background-color: #ffffff;
        }

        .card {
            border: none;
            border-radius: 12px;
        }

            .card h4 {
                font-weight: 600;
            }

        .sidebar-icon {
            width: 20px;
        }

        .section-title {
            font-weight: 700;
        }

        .edit-btn {
            background-color: #2e7d32;
        }

            .edit-btn:hover {
                background-color: #368d3b;
                color: green;
            }
    </style>
</head>
<body>
    <div class=" px-0">
        <div class="row g-0 min-vh-100">

            <!-- Sidebar -->
            <div style="width: 20%" class="w-25 bg-green px-4 text-white">
                <div class="logo text-center pt-3">
                    <h1><i class="fa fa-recycle" aria-hidden="true"></i> TrashTrack</h1>
                </div>
                <div class="px-1 flex-column mt-5 pt-5 fs-5">
                    <div onclick="showSection('dashboard', this)"
                         class="dash-hover align-content-center dash-menu">
                        <i class="fa fa-tachometer-alt me-2"></i>Dashboard
                    </div>
                    <div onclick="showSection('pickup', this)"
                         class="dash-hover dash-menu">
                        <i class="fa fa-calendar-check me-2"></i>Pickup Schedules
                    </div>
                    <div onclick="showSection('reports', this)"
                         class="dash-menu dash-hover">
                        <i class="fa fa-list me-2"></i>User Reports
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="w-75 content px-0">
                <div class="py-4 px-5 bg-nav d-flex justify-content-end align-items-center">
                    <div class="d-flex gap-4 text-white fs-4 position-relative">
                        <i class="fa fa-bell position-relative">
                            <span class="noti position-absolute bg-danger rounded-circle p-1"></span>
                        </i>
                        <i class="fa fa-user"></i>
                    </div>
                </div>

                <!-- Admin dashboard section -->
                <div class="mt-3 px-5 bg-white h-100" id="dashboard-section">
                    <h1 class="fs-2 text-black fw-bold">Admin Dashboard</h1>
                    <div class="row gap-5">
                        <div class="fs-2 col-md-4 dash-box bg-primary">
                            <i class="fa fa-user" aria-hidden="true"></i> User
                        </div>
                        <div class="fs-2 col-md-4 dash-box bg-danger">
                            <i class="fa fa-flag" aria-hidden="true"></i>Report
                        </div>
                        <div class="fs-2 dash-box col-md-4 bg-success">
                            <i class="fa fa-calendar-check" aria-hidden="true"></i>Schedule
                        </div>
                    </div>
                </div>

                <!-- Pickup Schedules Section -->
                <div class="container d-none" id="pickup-section">
                    <div class="pickup-container shadow">
                        <div class="pickup-header text-center mb-4">
                            <i class="fa fa-calendar-check me-2"></i>Pickup Schedule
                        </div>
                        <!-- Ward Dropdown -->
                        <form class="mb-4">
                            <div class="row g-2 align-items-center">
                                <div class="col-4 col-sm-3">
                                    <label for="wardSelect"
                                           class="form-label mb-0 fw-semibold text-success">
                                        <i class="fa fa-location-dot me-1"></i>Ward
                                    </label>
                                </div>
                                <div class="col-8 col-sm-9">
                                    <select class="form-select rounded-pill"
                                            id="wardSelect"
                                            aria-label="Select Ward">
                                        <option selected>Ward 12</option>
                                        <!-- Example: Add more wards as needed -->
                                        <option>Ward 1</option>
                                        <option>Ward 2</option>
                                        <option>Ward 3</option>
                                        <option>Ward 4</option>
                                        <option>Ward 5</option>
                                        <option>Ward 6</option>
                                        <option>Ward 7</option>
                                        <option>Ward 8</option>
                                        <option>Ward 9</option>
                                        <option>Ward 10</option>
                                        <option>Ward 11</option>
                                        <option>Ward 13</option>
                                        <option>Ward 14</option>
                                        <option>Ward 15</option>
                                        <option>Ward 16</option>
                                        <option>Ward 17</option>
                                        <option>Ward 18</option>
                                        <option>Ward 19</option>
                                        <option>Ward 20</option>
                                        <option>Ward 21</option>
                                        <option>Ward 22</option>
                                        <option>Ward 23</option>
                                        <option>Ward 24</option>
                                        <option>Ward 25</option>
                                        <option>Ward 26</option>
                                        <option>Ward 27</option>
                                        <option>Ward 28</option>
                                        <option>Ward 29</option>
                                        <option>Ward 30</option>
                                        <option>Ward 31</option>
                                        <option>Ward 32</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                        <!-- Next Pickup Highlight -->
                        <div class="next-pickup-box mb-4">
                            <i class="fa fa-trash-can"></i>
                            <div>
                                <div class="fw-bold fs-5">
                                    Next Pickup: <span class="ms-1">Wednesday, 10 July</span>
                                </div>
                                <div class="small">
                                    <i class="fa fa-clock me-1"></i>Time: 7:00 AM – 9:00 AM
                                </div>
                            </div>
                        </div>
                        <!-- Pickup Schedule Table -->
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body p-0">
                                <table class="table pickup-table mb-0">
                                    <thead>
                                        <tr>
                                            <th scope="col">
                                                <i class="fa fa-calendar-day"></i> Day
                                            </th>
                                            <th scope="col"><i class="fa fa-clock"></i> Time</th>
                                            <th scope="col">
                                                <i class="fa fa-trash-can"></i> Status
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Sunday</td>
                                            <td>7:00 AM – 9:00 AM</td>
                                            <td>
                                                <span class="status-badge status-completed">
                                                    <i class="fa fa-check-circle me-1"></i>Completed
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Monday</td>
                                            <td>–</td>
                                            <td>
                                                <span class="status-badge status-missed"><i class="fa fa-times-circle me-1"></i>Missed</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Tuesday</td>
                                            <td>7:00 AM – 9:00 AM</td>
                                            <td>
                                                <span class="status-badge status-completed">
                                                    <i class="fa fa-check-circle me-1"></i>Completed
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Wednesday</td>
                                            <td>7:00 AM – 9:00 AM</td>
                                            <td>
                                                <span class="status-badge status-scheduled">
                                                    <i class="fa fa-calendar-check me-1"></i>Scheduled
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Thursday</td>
                                            <td>–</td>
                                            <td>
                                                <span class="status-badge status-missed"><i class="fa fa-times-circle me-1"></i>Missed</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Friday</td>
                                            <td>7:00 AM – 9:00 AM</td>
                                            <td>
                                                <span class="status-badge status-scheduled">
                                                    <i class="fa fa-calendar-check me-1"></i>Scheduled
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Saturday</td>
                                            <td>–</td>
                                            <td>
                                                <span class="status-badge status-missed"><i class="fa fa-times-circle me-1"></i>Missed</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Reports Section -->
                <div class="container d-none" id="reports-section">
                    <div class="dashboard-title">User Reports</div>
                    <div class="card shadow-sm p-4">
                        <h5 class="mb-3 text-danger">Recent Reports</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Overflowing bin</strong> - Ward 12
                                <span class="badge bg-danger">New</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Missed pickup</strong> - Ward 7
                                <span class="badge bg-warning text-dark">Pending</span>
                            </li>
                            <li class="list-group-item">
                                <strong>Damaged container</strong> - Ward 3
                                <span class="badge bg-secondary">Resolved</span>
                            </li>
                        </ul>
                    </div>
                </div>



            </div>
        </div>
        <!-- Section Switcher Script -->
        <script>
            function showSection(section, el) {
              document.getElementById("dashboard-section").classList.add("d-none");
              document.getElementById("pickup-section").classList.add("d-none");
              document.getElementById("reports-section").classList.add("d-none");
              document
                .getElementById(section + "-section")
                .classList.remove("d-none");
              document.querySelectorAll(".dash-menu").forEach((menu) => {
                menu.classList.remove("active", "text-dark");
                menu.classList.add("text-white");
              });
              el.classList.add("active", "text-dark");
              el.classList.remove("text-white");
            }
        </script>
</body>
</html>